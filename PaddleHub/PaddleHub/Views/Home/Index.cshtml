@model IEnumerable<PaddleHub.Models.Paddle>
@{
    ViewBag.Title = "Home Page";
}

<Ul class="paddles">
    @foreach (var paddle in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @paddle.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @paddle.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="paddler">
                    @paddle.Paddler.UserDetails.Name()
                </span>
                <span class="location">
                    @paddle.Location
                </span>
                <span class="type">
                    @paddle.PaddleType.Name
                </span>
            </div>
        </li>
    }
</Ul>