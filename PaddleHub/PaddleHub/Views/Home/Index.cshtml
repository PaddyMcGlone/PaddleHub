@model IEnumerable<PaddleHub.Models.Paddle>
@{
    ViewBag.Title = "Home Page";
}

<ul class="paddles">
    @foreach (var paddle in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @paddle.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @paddle.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="paddler">
                    @paddle.Paddler.UserDetails.FirstName
                </span>
                <span class="location">
                    @paddle.Location
                </span>
                <span class="type">
                    @paddle.PaddleType.Name
                </span>
            </div>
            <div class="actions">
                <button class="btn btn-default btn-sm js-toggle-attend" id="attend" data-id ="@paddle.Id">Add to calender</button>
                <button class="btn btn-default btn-sm" id="info">More info</button>
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-toggle-attend").click(function(e) {
                var button = $(e.target);
                $.post("/api/attendance", button.attr("data-id"))
                    .done(function() {
                        button.removeClass("btn-default").addClass("btn-info").text("Attending");
                    })
                    .fail(function() {
                        alert("Something went wrong");
                    });
            });
        })        
    </script>
}