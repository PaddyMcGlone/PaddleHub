@model PaddleHub.ViewModels.PaddleFormViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(m => m.Location)
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.PaddleType)
        @Html.DropDownListFor(m => m.PaddleType, new SelectList(Model.PaddleTypes, "Id", "Name"))
    </div>
</form>